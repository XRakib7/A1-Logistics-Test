<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base night theme -->
    <!-- Night Theme (Parent inherits from MaterialComponents.Dark) -->
    <style name="Theme.A1Logistics.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary (Deep Yellow) -->
        <item name="colorPrimary">@color/dark_yellow</item>
        <item name="colorPrimaryVariant">@color/dark_mustard</item>
        <item name="colorOnPrimary">@color/gold_primary</item>
        <!-- Secondary (Dark Peach) -->
        <item name="colorSecondary">@color/dark_peach</item>
        <item name="colorSecondaryVariant">@color/dark_coral</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:statusBarColor">@color/dark_mustard</item>
        <!-- Text Inputs -->
        <item name="textInputStyle">@style/CuteTextInputStyle.Dark</item>
        <!-- Buttons -->
        <item name="materialButtonStyle">@style/CuteButtonStyle.Dark</item>
    </style>

    <style name="CuteTextInputStyle.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_yellow</item>
        <item name="hintTextColor">@color/dark_yellow</item>
        <item name="android:textColorHint">@color/dark_yellow</item> <!-- Add this line -->
        <item name="boxBackgroundColor">@color/dark_input_bg</item>
        <item name="android:textColor">@color/white</item> <!-- Changed from black to white -->
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- Dark Button Style -->
    <style name="CuteButtonStyle.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dark_yellow</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/dark_peach</item>
    </style>
</resources>