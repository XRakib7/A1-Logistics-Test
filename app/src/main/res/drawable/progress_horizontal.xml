<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rich golden background with depth -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:startColor="#3A2C0A"
                android:endColor="#1A1405"
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#5D4A19" />
        </shape>
    </item>

    <!-- Inner glow effect -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.8dp"
                android:color="#70643A" />
        </shape>
    </item>

    <!-- Luxurious progress fill with golden gradient -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient
                    android:startColor="#FFD700"
                    android:centerColor="#FFA500"
                    android:endColor="#FF8C00"
                    android:angle="270"
                    android:type="linear" />

                <!-- Subtle metallic shine -->
                <stroke
                    android:width="0.6dp"
                    android:color="#80FFEE99" />
            </shape>
        </clip>
    </item>

    <!-- Honeycomb pattern overlay (semi-transparent) -->
    <item>
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="#20FFD700" />
            <stroke
                android:width="1.2dp"
                android:color="#30FFD700"
                android:dashWidth="3dp"
                android:dashGap="2dp" />
        </shape>
    </item>

    <!-- Polished gold border highlight -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.8dp"
                android:color="#C0FFD700"
                android:dashWidth="0.5dp"
                android:dashGap="1.5dp" />
        </shape>
    </item>

    <!-- Top glossy highlight -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <corners
                android:topLeftRadius="7dp"
                android:topRightRadius="7dp" />
            <solid android:color="#30FFFFFF" />
            <size android:height="3dp" />
        </shape>
    </item>
</layer-list>